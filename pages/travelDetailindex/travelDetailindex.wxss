@import '../travelTemplate/travelTemplate.wxss';
.main{
  background: white;
}
.bottomBtn{
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
  background: white;
}
.flexItem{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 12rpx 0;
}
.flexItemImg{
  width: 40rpx;
  height: 40rpx;
  display: block;
}
.flexItemText{
  font-size: 28rpx;
  color: #999999;
  margin-top: 10rpx;
}
.flexItemRight{
  flex: 2;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #FE8D87, #FF6662);
}
.btnPosition{
  position: relative;
}
.positionBtn{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.active{
  padding: 30rpx 30rpx 0 30rpx;
}

.activeInfo{
  /* padding: 23rpx; */
  display: flex;
  flex-flow: column;
  background: white;
}

.activeImg{
  width: 690rpx;
  height: 406rpx;
  display: block;
}

.imgCenter{
  margin-bottom: 20rpx;
}

.imgCenter:last-child{
  margin-bottom: 0;
}

.activeName{
  color: #333333;
  font-weight: 400;
  font-size: 26rpx;
  margin-top: 15rpx;
  position: relative;
}
.txt{
  position: absolute;
  right: -75rpx;
  top: 0;
  color: #fe5a5f;
  font-size: 30rpx;
  border: 1rpx solid #fe5a5f;
  border-radius: 2px;
}
.fontW{
  line-height: 70rpx;
  /* margin-bottom: 20rpx; */
  font-size: 32rpx;
  font-weight: 900;
}
.activeTime{
  color: #999999;
  font-size: 26rpx;
  margin: 15rpx 0;
}
.activeAddress,.activeContent{
  color: #999999;
  font-size: 20rpx;
}
.activeAddress{
  margin:25rpx 0 25rpx 0;
}
.hint{
  color: #999;
}

/* 地图导航 */
.seas{
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  /* background: #f4f4f4; */
  margin-bottom: 40rpx;
}
.seas image{
  width: 100%;
  height: 130rpx;
}
.recommend{
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  line-height: 50rpx;
  font-weight: 300;
}
/* 图片上title */
.titles{
  margin: 10rpx 0;
}
.titleFont{
  font-size: 30rpx;
  line-height: 48rpx;
  color: #666;
}
.conent{
  margin: 10rpx 0;
  text-indent: 1em;
}