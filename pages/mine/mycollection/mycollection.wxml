<view class='showList' wx:if='{{add == 1}}'>
      <!--附近促销  -->
      <view class="{{(index + 1)%3 !== 0?'showItems':'showItem'}} " wx:for='{{collectionList}}' data-objcode='{{item.objCode}}' bindtap='goShop'>
        <!--店名称  -->
        <view class='itemTitle'>
          <text class="{{(index + 1)%3 !== 0?'titleTexts':'titleText'}} ">{{item.customerActivityInfos[0].activeName}}</text>
          <image wx:if='{{(index + 1)%3 === 0}}' src='../../images/jiantou1.png' class='titleImg'></image>
        </view>
        <view class='itk'>
          <view class="{{(index + 1)%3 !== 0?'itts':'itt'}}">
            <image class='Imgwh' mode='aspectFill' src='{{item.customerActivityInfos[0].cover}}'></image>
          </view>
          <view wx:if='{{(index + 1)%3 === 0}}' class='itt'>
            <image class='Imgwh' mode='aspectFill' src='{{item.customerActivityInfos[0].cover}}'></image>
          </view>
          <view wx:if='{{(index + 1)%3 === 0}}' mode='aspectFill' class='itt'>
            <image class='Imgwh' src='{{item.customerActivityInfos[0].cover}}'></image>
          </view>
        </view>
        <!--店促销时间  -->
        <view class="{{(index + 1)%3 !== 0?'itemDates':'itemDate'}}">
          <view class="{{(index + 1)%3 !== 0?'dateTimes':'dateTime'}}">
            <text>{{item.customerActivityInfos[0].shopName}}</text>
          </view>
          <view>
            <view class="dateFind">
              <image src='../../../images/guancha.png' class='findImg'></image>
              <text class='findText'>{{item.customerActivityInfos[0].activityNumber < 5000?item.customerActivityInfos[0].activityNumber + '次':'5000+'}}</text>
            </view>
            <view class="dateLocation">
              <!-- <image src='../../images/dizhi.png' class='locationImg'></image>
              <text class='locationText'>{{item.customerActivityInfos[0].distance/1000 < 0 ? "0" : item.customerActivityInfos[0].distance/1000}}km</text> -->
            </view>
          </view>
        </view>
      </view>
    </view>














