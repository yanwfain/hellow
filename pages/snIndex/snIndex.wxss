  border-bottom:1rpx solid #e5e5e5;
}

/* 生活智慧 */


.wisdomView{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-bottom: 1rpx solid #E6E6E6;
}

.lifeList{
  display: flex;
  flex-wrap: wrap;
}

.lifeImg{
  display: block;
