<!-- 促销列表 -->
<template name='activityList'>
  <view>
    <!--展示列表  -->
    <view class='showList' wx:if="{{shopItemInfo[0].activeName}}">
      <!--附近促销  -->
      <view class="{{(index + 1)%3 !== 0?'showItems':'showItem'}} " wx:for='{{shopItemInfo}}' bindtap='goActive' data-code='{{item.code}}' data-id="{{item.id}}" data-shopCode='{{item.shopCode}}'>
        <!--店名称  -->
        <view class='itemTitle'>
          <text class="{{(index + 1)%3 !== 0?'titleTexts':'titleText'}} ">{{item.activeName}}</text>
          <image wx:if='{{(index + 1)%3 === 0}}' src='../../images/jiantou1.png' class='titleImg'></image>
        </view>
        <view class='itk'>
          <view class="{{(index + 1)%3 !== 0?'itts':'itt'}}">
            <image class='Imgwh' mode='aspectFill' src='{{item.cover}}'></image>
          </view>
          <view wx:if='{{(index + 1)%3 === 0}}' class='itt'>
            <image class='Imgwh' mode='aspectFill' src='{{item.coverSecond}}'></image>
          </view>
          <view wx:if='{{(index + 1)%3 === 0}}' mode='aspectFill' class='itt'>
            <image class='Imgwh' src='{{item.coverThird}}'></image>
          </view>
        </view>
        <!--店促销时间  -->
        <view class="{{(index + 1)%3 !== 0?'itemDates':'itemDate'}}">
          <view class="{{(index + 1)%3 !== 0?'dateTimes':'dateTime'}}">
            <text>{{item.shopName}}</text>
          </view>
          <view>
            <view class="dateFind">
              <image src='../../images/guancha.png' class='findImg'></image>
              <text class='findText'>{{item.activityNumber < 5000?item.activityNumber + '次':'5000+'}}</text>
            </view>
            <view class="dateLocation">
              <image src='../../images/dizhi.png' class='locationImg'></image>
              <text class='locationText'>{{item.distance/1000 < 0 ? "0" : item.distance/1000}}km</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</template>
<!-- 附近的店列表 -->
<template name='store'>
  <view class='shopList' wx:if='{{shopItemInfo[0].shopInfo.name}}'>
    <view class='shopItem' bindtap='getShopCode' wx:for='{{shopItemInfo}}' data-code='{{item.shopInfo.code}}'>
      <!-- <image src='http://www.shanniao.vip/imgServer/images/lijian.jpg?t=121354413' class='shopImg' wx:if='{{item.shopInfo.sysShopImgInfoList[0].imgUrl == null}}'></image> -->
      <image src='{{item.shopInfo.sysShopImgInfoList[0].imgUrl}}' class='shopImg'></image>
      <view class='shopInfo'>
        <view class='infoText'>
          <view class='up'>
            <text class='shopName'>{{item.shopInfo.name}}</text>
            <text class='shopStatus'>{{item.shopInfo.sysShopBussinessInfo.isOpen == 1 ? "营业" : "停业"}}</text>
          </view>

          <view class='shopText' style='height:30rpx'>
            <text class='shopText shop2' style='margin:0 28rpx 0 0;padding:5rpx;'>正在促销</text>
            <text class='shopText shop3' style='padding:5rpx;'>曝光度{{item.shopInfo.buyCountByMonth * 133}}</text>
            <text class='shopText shopTexts' style='display:flex;flex:1;justify-content:flex-end;'>{{loc?"距市中心：":""}}{{item.shopInfo.distance/10 < 0 ? "0" : item.shopInfo.distance/1000}}km
                            </text>
          </view>
          <text style='' class='shopText st kk'>线上促销，到店消费/服务</text>
          <text class='shopText st'>{{item.shopInfo.address}}</text>
        </view>
      </view>
    </view>
  </view>
</template>
<!-- 分类 -->
<template name='classFily'>
  <view class='ify'>
    <view bindtap='switchover' data-id='0'>{{classList[0].big}}{{classList[0].diminutive == "全部"?"":"-" + classList[0].diminutive}}
      <image src='{{imges}}'></image>
    </view>
    <view bindtap='switchover' data-id='1'>{{classList[1].city}}{{classList[1].city == "附近"?"6公里":""}}
      <image src='{{imges}}'></image>
    </view>
    <view bindtap='switchover' data-id='2'>{{classList[2].sort}}
      <image src='{{imges}}'></image>
    </view>
    <view class='mlode {{pull?"mlodes":""}}' style='width:{{wid}}rpx;left:{{lefts}}rpx'>
      <scroll-view scroll-y class='mlodeOne' wx:if="{{claId == 0}}">
        <block wx:for='{{tabList}}' wx:key>
          <view bindtap='goClass' data-id='{{index}}' class='option {{item.scrollTab === false?"colorr":""}}'>{{item.typeName}}</view>
        </block>
      </scroll-view>
      <scroll-view scroll-y class='mlodeTwo' wx:if="{{claId == 0}}">
        <block wx:for='{{tabListSingle}}' wx:key>
          <view bindtap='goXclass' data-id='{{index}}' data-typeName='{{item.typeName}}' class='option {{item.scrollTab === false?"colorr":""}}'>{{item.typeName}}</view>
        </block>
      </scroll-view>
      <scroll-view scroll-y class='mlodeTwo centers' wx:if="{{claId == 1}}">
        <block wx:for='{{Citys}}' wx:key>
          <view bindtap='goCitys' data-typeName='{{item.city}}' class='option {{item.scrollTab === false?"colorr":""}}'>{{item.city}}</view>
        </block>
      </scroll-view>
      <scroll-view scroll-y class='mlodeTwo rights' style='width:325rpx' wx:if="{{claId == 2}}">
        <block wx:for='{{Sort}}' wx:key>
          <view bindtap='goSort' data-typeName='{{item.sort}}' class='option {{item.scrollTab === false?"colorr":""}}'>{{item.sort}}</view>
        </block>
      </scroll-view>
    </view>
  </view>
</template>
<template name='banner'>
  <swiper class='shop_swiper' indicator-dots autoplay="true" interval="3000" duration="1000" circular='true' class='lbImg' bindtap='goActiveInfo'>
    <block wx:for="{{lbList}}" wx:key="">
      <swiper-item wx:if='{{index < sum}}'>
        <image src="{{item.sysAdvertData.imgUrl}}" width='100%' height='150' class='lbImg' data-activecode="{{item.sysAdvertData.shopCode}}" data-activename="{{index}}" />
      </swiper-item>
    </block>
  </swiper>
</template>



