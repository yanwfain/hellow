/*
  搜索框
*/
.sea{
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
  background: white;
}
.int{
  width: 100%;
}
.search{
  width: 100%;
  height: 54rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  color: #999999;
  background:rgba(201,200,200,0.16);
}
.searImg{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx
}


/*
  店目录
*/
.wai{
  padding: 0 30rpx 0;
  background: white;
}
.shopItem{
  display: flex;
  padding: 23rpx 0 17rpx 38rpx;
  border-bottom: 1px solid #e5e5e5;
}
 .shopItem:last-child{
  border-bottom: none;
} 
.shopImg{
  width: 128rpx;
  height: 128rpx;
  margin-right: 32rpx;
  border-radius: 6rpx;
}
.shopInfo{
  display: flex;
  justify-content: space-between;
  flex: 1;
}
.infoText{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.up{
  display: flex;
  justify-content: space-between;
}
.shopName{
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 80%;
}
.st{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 90%;
}
.shopText{
  font-size: 20rpx;
  display: flex;
  color: #999999;
}
.kk{
  margin: 30rpx 0 34rpx;
}
.shopStatus{
  padding: 10rpx;
  background: linear-gradient(to  right, #FE8D87, #FF6662);
  border-radius:6rpx;
  color: white;
  font-size: 18rpx;
  text-align: center;
}
.statu{
  font-size: 20rpx;
}
.location{
  font-size: 24rpx;
}

/*near  */
.near{
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 273rpx;
  width: 100%;
}
.nearShop{
  width: 370rpx;
  height: 343rpx;
  margin-bottom: 79rpx;
}
.nearText{
  font-size: 32rpx;
  color: #999999;
}