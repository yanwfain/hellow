<!-- 轮播图 -->
 <swiper class='shop_swiper' indicator-dots autoplay="true" interval="3000" duration="1000" circular='true'  class='lbImg' bindtap='goActiveInfo'>
    <block wx:for="{{lbList}}" wx:key="">
      <swiper-item>
        <image src="{{item.imgUrl}}" width='100%' height='150' class='lbImg' data-activecode="{{item.sysAdvertActivityInfo.activityCode}}"/>
      </swiper-item>
    </block>
  </swiper>
<!-- 位置选择 -->
  <view class='seckregion' bindtap='sandh' data-sh='0'>
    <view class='sekcen'>
      <text>{{province}}</text>
      <image src='../../images/xiala.png' class='xiala'></image>
    </view>
    <view class='sekcen'>
      <text>{{city}}</text>
      <image src='../../images/xiala.png' class='xiala'></image>
    </view>
    <view class='sekcen'>
      <text>{{district}}</text>
      <image src='../../images/xiala.png' class='xiala'></image>
    </view>
</view>
<!-- 选择城市弹出层 -->
<view class='masking' bindtap='sandh' data-sh='1' wx:if="{{sh == 0}}">
  <view class='masView'>
    <scroll-view scroll-y class='masView1'>
      <block wx:for='{{provinceList}}'>
        <view data-province='{{item.fullname}}' class="{{item.fullname == province?'fontS':''}}" data-index='{{index}}' data-id="{{item.id}}" catchtap='province'>{{item.fullname}}</view>
      </block>
    </scroll-view>
    <scroll-view scroll-y class='masView1'>
      <block wx:for='{{cityList}}'>
        <view data-city='{{item.fullname}}' class="{{item.fullname == city?'fontS':''}}" data-index='{{index}}' data-id="{{item.id}}" catchtap='city'>{{item.fullname}}</view>
      </block>
    </scroll-view>
    <scroll-view scroll-y class='masView1'>
      <block wx:for='{{districtList}}'>
        <view data-district='{{item.fullname}}' class="{{item.fullname == district?'fontS':''}}" data-index='{{index}}'  data-fullname='{{item.fullname}}' data-location="{{item.location}}" data-id="{{item.id}}" catchtap='district'>{{item.fullname}}</view>
      </block>
    </scroll-view>
  </view>
</view>
<!-- 精选 -->
<!-- 列表 -->
<view class='centers'>
  <view class='cityArrs'>-城市-</view>
    <view class='titles' wx:if="{{orgList.areas.length > 0}}">直辖市</view>
    <view class='centerList'>
      <view wx:for='{{orgList.areas}}'  data-location='{{item.location}}' bindtap='goProvince' data-id='{{item.id}}' data-fullname='{{item.fullname}}' class='listDan'>{{item.fullname}}</view>
    </view>
  <block wx:for='{{orgList.areay}}'>
    <view class='titles'>{{item.fullname}}</view>
    <view class='centerList'>
      <view wx:for="{{item.areas}}"  data-location='{{item.location}}' bindtap='goProvince' data-id='{{item.id}}' data-fullname='{{item.fullname}}' class='listDan'>{{item.fullname}}</view>
    </view>
  </block>
</view>
