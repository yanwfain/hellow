<!-- 旅游列表 -->
<template name="travelList">
  <block wx:for='{{offcialList}}'>
    <!-- 灰条 -->
    <view style='background:#f4f4f4;height:8rpx;width:750rpx;'></view>
    <view class='commWidth' bindtap='goTravelOfficial' data-entrance='{{entrance}}' data-scenicCode='{{item.scenicCode}}' data-type='{{item.type}}' data-lat='{{item.lat}}' data-lng='{{item.lng}}' data-code='{{item.code}}' data-name='{{item.name}}' data-touristCode='{{item.touristCode}}' >
      <view class='travel'>
        <!-- 标题 -->
        <view class='travelTitle'>
          <text class='title'>{{item.title}}</text>
          <image class='travelTitleImg' src='../../images/jiantou1.png'></image>
        </view>
        <!-- 大图 -->
        <image class='mainImg' src='{{item.imgUrl}}'></image>
        <!-- 底部 -->
        <view class='travelFoot'>
          <view class='travelTime'>
            <image hidden='{{off}}' style='width:22rpx;height:30rpx;' src='../../images/dizhi.png'></image>
            <text hidden='{{off}}' >{{item.distance/1000}}km</text>
            <image style='width:30rpx;height:19rpx;' src='../../images/guancha.png'></image>
            <text>{{item.exposureTimes < 5000?item.exposureTimes:'5000+'}}</text>
          </view>
          <view class='travelName'>
            <image src='../../images/iconPhoto.jpg'></image>
            {{item.name}}
          </view>
        </view>
      </view>
    </view>
  </block>
</template>
<!-- banner -->
<template name='banner'>
  <swiper class='banner' style='height:{{classData.bannerHeight}}rpx' indicator-dots='true' autoplay='true' interval='5000' circular='true'>
    <block wx:for="{{banner}}">
      <swiper-item>
        <image bindtap="{{Bind?'':'goTravelOfficial'}}" data-name='{{item.shopName}}' class='bannImg' data-scenicCode='{{item.shopCode}}' src='{{item.imgUrl}}'></image>
      </swiper-item>
    </block>
  </swiper>
</template>
<!-- 附近的店列表 -->
<template name='store'>
  <view class='shopList' >
    <view class='shopItem' wx:for='{{shopItemInfo}}' bindtap='getShopCode' data-code='{{item.shopInfo.code}}' >
      <image src='{{item.shopInfo.sysShopImgInfoList[0].imgUrl}}' class='shopImg'></image>
      <view class='shopInfo'>
        <view class='infoText'>
          <view class='up'>
            <text class='shopName'>{{item.shopInfo.name}}</text>
            <text class='shopStatus'>{{item.shopInfo.sysShopBussinessInfo.isOpen == 1 ? "营业" : "停业"}}</text>
          </view>

          <view class='shopText' style='height:30rpx'>
            <text class='shopText shop2' style='margin:0 28rpx 0 0;padding:5rpx;'>正在促销</text>
            <text class='shopText shop3' style='padding:5rpx;'>曝光度{{item.shopInfo.buyCountByMonth * 133}}</text>
            <text class='shopText shopTexts' style='display:flex;flex:1;justify-content:flex-end;'>{{off?'':'距景区：'}}{{item.shopInfo.distance/10 < 0 ? "0" : item.shopInfo.distance/1000}}km
                            </text>
          </view>
          <text style='' class='shopText st kk'>线上促销，到店消费/服务</text>
          <text class='shopText st'>{{item.shopInfo.address}}</text>
        </view>
      </view>
    </view>
  </view>
</template>
<!--分类导航  -->
<template name='classNav'>
  <view class='nav'>
    <block wx:for='{{navList}}'>
      <view class='itemClass' bindtap='getItemCode' data-code='{{item.typeCode}}' data-typeName='{{item.typeName}}'>
        <image class='itemImg' src='{{item.imgUrl}}' ></image>
        <text class='itemText' data-code='{{item.code}}'>{{item.typeName}}</text>
      </view>
    </block>
    <view class='ambitus'>庄园周边</view>
  </view>
</template>

<!-- 分类 -->
<template name='classFily'>
  <view class='ify'>
    <view bindtap='switchover' data-id='0'>{{classList[0].big}}{{classList[0].diminutive == "全部"?"":"-" + classList[0].diminutive}}
      <image src='{{imges}}'></image>
    </view>
    <view bindtap='switchover' data-id='1'>{{classList[1].city}}{{classList[1].city == "附近"?"6公里":""}}
      <image src='{{imges}}'></image>
    </view>
    <view bindtap='switchover' data-id='2'>{{classList[2].sort}}
      <image src='{{imges}}'></image>
    </view>
    <view class='mlode {{pull?"mlodes":""}}' style='width:{{wid}}rpx;left:{{lefts}}rpx'>
      <scroll-view scroll-y class='mlodeOne' wx:if="{{claId == 0}}">
        <block wx:for='{{tabList}}' wx:key>
          <view bindtap='goClass' data-id='{{index}}' class='option {{item.scrollTab === false?"colorr":""}}'>{{item.typeName}}</view>
        </block>
      </scroll-view>
      <scroll-view scroll-y class='mlodeTwo' wx:if="{{claId == 0}}">
        <block wx:for='{{tabListSingle}}' wx:key>
          <view bindtap='goXclass' data-id='{{index}}' data-typeName='{{item.typeName}}' class='option {{item.scrollTab === false?"colorr":""}}'>{{item.typeName}}</view>
        </block>
      </scroll-view>
      <scroll-view scroll-y class='mlodeTwo centers' wx:if="{{claId == 1}}">
        <block wx:for='{{Citys}}' wx:key>
          <view bindtap='goCitys' data-typeName='{{item.city}}' class='option {{item.scrollTab === false?"colorr":""}}'>{{item.city}}</view>
        </block>
      </scroll-view>
      <scroll-view scroll-y class='mlodeTwo rights' style='width:325rpx' wx:if="{{claId == 2}}">
        <block wx:for='{{Sort}}' wx:key>
          <view bindtap='goSort' data-typeName='{{item.sort}}' class='option {{item.scrollTab === false?"colorr":""}}'>{{item.sort}}</view>
        </block>
      </scroll-view>
    </view>
  </view>
</template>
