
/* 头部滑块 */
.cont{
  width: 96%;
  margin: 0 auto;
}
.scroX{
  white-space: nowrap;
  width: 100%;
  
}
.scroX view{
  display: inline-block;
  margin: 10rpx 0;
}
.classFaly{
  padding: 5rpx 25rpx;
  font-weight: 400;
  font-size: 30rpx;
  border-radius: 30rpx;
}

.color{
   background:rgba(255,92,97,0.2097);
   color: #FF5C61;
   font-weight: 900;
}

/* 文章list */
.wisdomView{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-bottom: 1rpx solid #E6E6E6;
}

.lifeList{
  display: flex;
  flex-wrap: wrap;
}

.lifeImg{
  display: block;
  width: 230rpx;
  height: 150rpx;
  margin-right: 25rpx;
  
}

.lifeText{
  display: flex;
  flex-wrap: wrap;
  flex: 1;
  height: 150rpx;
  width: 376rpx;
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  position: relative;
}
.conter{
  width: 100%;
  line-height: 38rpx;
  height: 76rpx;
  overflow: hidden;
}
.author{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  color:#333333;
  font-weight:400;
  position: absolute;
  bottom: 0;
}
.author text{
  width: 55%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.zuozhe{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
  margin-top: 10rpx;
  justify-content: flex-end;
}
.main{
  border-top: 10rpx solid #f4f4f4;
}
.zuozhe text:nth-child(1){
  margin-right: 20rpx;
}