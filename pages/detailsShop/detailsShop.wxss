.show{display:block;text-align:center;line-height:100rpx;}

.hidden{display:none;text-align:center;line-height:200px;}


.fixedCar{
  position:fixed;
  bottom:0;
  width:100%;
  display:flex;
  text-align:center;
  background:#fff;
  border-top:1rpx solid #DADDE0;
}
.fixedCar .car{
  color: white; 
  background: green;
  flex: 2;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #FE8D87, #FF6662);
}
.fixedCar .buy{
  /* width: 50%; */
  background: #FF5E63;
  color: #fff;
}
.fixedCar .buy_no{
  /* width: 50%; */
  background: #cccccc;
  color: #fff;
}
.fixed_item{
  flex: 1;
}
.fenXiangBtn{
  position: relative;
}
