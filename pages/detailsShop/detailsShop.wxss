.guiGe{
  display:flex;
flex-wrap:wrap;
justify-content:space-around;
margin:0 auto;
margin-top:20rpx;
}
.goodsTitle{
  padding: 24rpx 30rpx;
  background: #fff;
  border-top:1rpx solid #f4f4f4;
}
.goodsTitle .title{
  font-size: 32rpx;
  font-weight: 800;
  color: #333;
}
.goodsTitle .synopsis,.goodsTitle .sold{
  color: #999;
  font-size: 24rpx!important;
}
.goodsTitle .synopsis{
  margin-bottom: 8rpx;
  margin-top: 4rpx;
}
.goodsTitle .commodity{
  font-size: 36rpx;
  color: #FF5A5F;
  display: flex;
  justify-content: space-between;
}
.salePrice{
  font-size: 48rpx;
}
.throughline{
  text-decoration: line-through;
  color:#bbbbbb;
  font-size: 30rpx;
  margin-left: 24rpx
}
.goodsTitle .sold{
  margin-top: 32rpx;
}
/* 商品详情 */
.details{
  background: #fff;
  margin-top: 16rpx;
  padding: 24rpx 30rpx;
  font-size: 26rpx;
  color: #666;
}
.details image{
  width: 100%;
  /* height: 315rpx; */
  margin: 20rpx 0;
  }
.details text{
  line-height: 40rpx;
}
.spec{
  color: #666;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
}
.spec text,.details .imgTxt{
  margin-bottom: 16rpx;
}
